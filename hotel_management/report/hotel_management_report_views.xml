<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- PDF report action -->
        <record id="hotel_action_report_pdf" model="ir.actions.report">
            <field name="name">Hotel Management Report</field>
            <field name="model">report.hotel_management.report_pdf</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hotel_management.report_pdf</field>
            <field name="report_file">hotel_management.report_pdf</field>
            <field name="print_report_name">'Hotel Management Report'</field>
        </record>
        <!-- XLSX report action -->
        <record id="hotel_action_report_xlsx" model="ir.actions.report">
            <field name="name">Hotel Management Report XLSX</field>
            <field name="model">report.hotel_management.report_xlsx</field>
            <field name="report_type">xlsx</field>
            <field name="report_name">hotel_management.report_xlsx</field>
            <field name="report_file">hotel_management.report_xlsx</field>
            <field name="print_report_name">'Hotel Management Report'</field>
        </record>
    </data>
    <!-- PDF report template -->
    <template id="report_pdf">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2><strong>Hotel Management Report</strong></h2>
                    <div class="row mt32 mb32">
                        <t t-if="data['from_date']"><div class="col-4">
                            <strong>Date From:</strong>
                                <p t-esc="data['from_date']"/>
                        </div></t>
                        <t t-if="data['to_date']"><div class="col-4">
                            <strong>Date To:</strong>
                                <p t-esc="data['to_date']"/>
                        </div></t>
                        <t t-if="data['guest_name']"><div class="col-4">
                            <strong>Guest Name:</strong>
                                <p t-esc="data['guest_name']"/>
                        </div></t>
                    </div>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>SL.No</th>
                                    <t t-if="not data['guest_name']"><th>Guest</th></t>
                                    <th>Check-In</th>
                                    <th>Check-Out</th>
                                    <th>State</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="docs" t-as="doc">
                                    <td><span t-esc="doc[0]"/></td>
                                    <t t-if="not data['guest_name']"><td><span t-esc="doc[4]"/></td></t>
                                    <td><span t-esc="context_timestamp(doc[1]).strftime('%d/%m/%Y %H:%M:%S')"/></td>
                                    <t t-if="not doc[2]"><td><span t-esc="doc[2]"/></td></t>
                                    <t t-else=""><td><span t-esc="context_timestamp(doc[2]).strftime('%d/%m/%Y %H:%M:%S')"/></td></t>
                                    <td><span t-esc="doc[3]"/></td>
                                </tr>
                            </tbody>
                        </table>
                </div>
            </t>
        </t>
    </template>
</odoo>