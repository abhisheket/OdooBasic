<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Rooms tree view -->
    <record id="view_hotel_room_list" model="ir.ui.view">
        <field name="name">hotel.room.list</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <tree string="Room list">
                <field name="room_number"/>
                <field name="bed"/>
                <field name="facility_ids"/>
                <field name="currency_id" invisible="1"/>
                <field name="rent" widget="monetary"/>
            </tree>
        </field>
    </record>
    <!-- Rooms form view -->
    <record id="view_hotel_room_form" model="ir.ui.view">
        <field name="name">hotel.room.form</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <form string="Room form">
                <sheet>
                    <group>
                        <group>
                            <field name="room_number"/>
                            <field name="bed"/>
                            <field name="available_bed" attrs="{'invisible':[('bed','!=', 'dormitory')]}"/>
                        </group>
                        <group>
                            <field name="facility_ids" widget="many2many_tags"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="rent" widget="monetary"/>
                            <field name="room_available" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Rooms search view -->
    <record id="view_hotel_room_search" model="ir.ui.view">
        <field name="name">hotel.room.search</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <search>
                <field name="room_number" string="Room"/>
                <filter string="Available Rooms" name="available_room_filter" domain="[('room_available', '=', True)]"/>
                <group>
                    <filter string="Type" name="bed_type_group_filter" context="{'group_by':'bed'}"/>
                </group>
            </search>
        </field>
    </record>
    <!-- Facilities tree view -->
    <record id="view_hotel_facility_tree" model="ir.ui.view">
        <field name="name">hotel.facility.tree</field>
        <field name="model">hotel.facility</field>
        <field name="arch" type="xml">
            <tree string="Facilities Tree" editable="bottom">
                <field name="facility"/>
            </tree>
        </field>
    </record>
    <!-- Rooms window action -->
    <record id="hotel_room_list_action" model="ir.actions.act_window">
        <field name="name">Rooms</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new room</p>
        </field>
    </record>
    <!-- Facilities window action -->
    <record id="hotel_facility_list_action" model="ir.actions.act_window">
        <field name="name">Facilities</field>
        <field name="res_model">hotel.facility</field>
        <field name="view_mode">tree</field>
    </record>
    <!-- Main menu -->
    <menuitem id="main_hotel_management_menu" name="Hotel Room Management"/>
    <!-- Configuration menu and Rooms sub-menu -->
    <menuitem id="configuration_menu" name="Configuration" parent="main_hotel_management_menu" sequence="100"/>
    <menuitem id="hotel_room_menu" name="Rooms" parent="configuration_menu" action="hotel_room_list_action"/>
    <!-- Facilities menu -->
    <menuitem id="hotel_facility_menu" name="Facilities" parent="configuration_menu" action="hotel_facility_list_action"/>
</odoo>
