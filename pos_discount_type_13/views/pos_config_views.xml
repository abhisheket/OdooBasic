<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.config.view.form.inherit.pos.discount.type</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pricing']" position="inside">
                <div class="col-xs-12 col-lg-6 o_setting_box" id="product_prices">
                    <div class="o_setting_right_pane">
                        <label for="discount_type" string="Discount"/>
                        <div class="text-muted">
                            Discount type
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="discount_type" class="o_light_label" widget="radio"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>